model User{
  id String @id @default(uuid())
  email String @unique
  password String
  createdAt DateTime @default(now())
  todos Todo[]
}

model Todo{
  id String @id @default(uuid())
  title String
  description String?
  completed Boolean @default(false) 
  userId String
  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
}